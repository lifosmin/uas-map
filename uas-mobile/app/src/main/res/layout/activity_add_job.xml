<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight=".7"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/jobImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:scaleType="centerCrop"
                android:src="@drawable/desc" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Image"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/takeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Image"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_weight=".5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Judul"
                    android:textColor="@color/white"
                    android:layout_weight=".3"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/jobJudul"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:padding="10dp"
                    android:background="@drawable/white_bg_round"
                    android:layout_weight=".7" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:text="Detail"
                    android:textColor="@color/white"
                    android:layout_weight=".3"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/jobDetail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:padding="10dp"
                    android:background="@drawable/white_bg_round"
                    android:layout_weight=".7" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:text="Alamat"
                    android:textColor="@color/white"
                    android:layout_weight=".3"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/jobAlamat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:padding="10dp"
                    android:background="@drawable/white_bg_round"
                    android:layout_weight=".7" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:text="Gaji"
                    android:textColor="@color/white"
                    android:layout_weight=".3"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/jobGaji"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:padding="10dp"
                    android:background="@drawable/white_bg_round"
                    android:layout_weight=".7" />
            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:orientation="horizontal">-->
<!--                <TextView-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="top"-->
<!--                    android:text="Tanggal"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:layout_weight=".3"-->
<!--                    android:textSize="20sp"/>-->
<!--                <EditText-->
<!--                    android:id="@+id/jobTanggal"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="top|left"-->
<!--                    android:focusable="false"-->
<!--                    android:inputType="date"-->
<!--                    android:padding="10dp"-->
<!--                    android:background="@drawable/white_bg_round"-->
<!--                    android:layout_weight=".7" />-->
<!--            </LinearLayout>-->
            <Button
                android:id="@+id/addJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Add Job"
                android:backgroundTint="@color/white"
                android:textColor="@color/dark_blue"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>