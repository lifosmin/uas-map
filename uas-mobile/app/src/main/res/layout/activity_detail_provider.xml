<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/judulJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuci Gudang"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />
    <LinearLayout
        android:elevation="40dp"
        android:background="@drawable/blue_bg"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulJob">

        <TextView
            android:id="@+id/jobGaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 100.000 / Jam"
            android:layout_marginVertical="10dp"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/jobImage"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:src="@drawable/desc" />

        <TextView
            android:id="@+id/jobTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 November"
            android:textSize="25dp"
            android:textColor="@color/white"

            android:layout_marginHorizontal="10dp"            />

        <TextView
            android:id="@+id/jobLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelapa Dua"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/jobDesc"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:text="Saya butuh bantuan sebanyak  2  orang untuk membantu memperbaiki atap yang bocor.
Atap tersebut berada tepat di atas kantor Tokopedia."
            />

        <Button
            android:id="@+id/buttonTrack"
            android:backgroundTint="@color/orange"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Seeker" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>